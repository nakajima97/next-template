{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": [
			"node_modules/*",
			"dist",
			"build",
			"coverage",
			"*.log",
			".next/*",
			"package.json",
			"tsconfig.json"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
